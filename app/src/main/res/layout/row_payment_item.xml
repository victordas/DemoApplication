<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:paddingBottom="8dp"
            android:background="@drawable/payment_item_background">

            <TextView
                android:id="@+id/paymentItemLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/payment_item_cash_label"
                android:textColor="@color/black"
                android:layout_weight="0"
                android:textSize="16sp" />
            <ImageButton
                android:id="@+id/deletePaymentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:minWidth="24dp"
                android:minHeight="24dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/black"
                android:layout_gravity="center|center_vertical"
                android:background="@drawable/delete_payment_button_icon" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#00000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>